<h1>Hello in our Pizza Shop!</h1>

<div class="container">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">

        <div style="text-align: center; font-size: 2em;">
          <strong>
            <%= product.title %>
          </strong>
        </div>

        <div>
          <img style="height: 150px; width: 250px;" src="<%= product.path_to_image %>">
        </div>

        <div style="color: #999;">
          <%= product.description %>
        </div>

        <div>
          Size: <%= product.size %> cm
        </div>

        <div>
          Price: <%= product.price %> BYN
        </div>

        <div>
          <button type="button" class="btn btn-success">Add to cart</button>
        </div>

      </div>
    <% end %>
  </div>
</div>
