<h1>Hello in our Pizza Shop!</h1>

<div class="container">
  <div class="row" style="height: 150px;">
    <% @products.each do |product| %>
      <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
        <p style="text-align: center; font-size: 2em;">
          <strong>
            <%= product.title %>
          </strong>
        </p>
        <p>
          <img style="height: 150px; width: 250px;" src="<%= product.path_to_image %>">
        </p>
        <p style="color: #999;">
          <%= product.description %>
        </p>
        <p>
          Price: <%= product.price %> BYN
        </p>
      </div>
    <% end %>
  </div>
</div>


<button class="btn btn-primary" onclick="something()">Click me!</button>
